<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.0.xsd">
	
  	<security:http>
   		<security:form-login
   				login-page="/BoardMain.nds"
				default-target-url="/AdminBoardMain.nds"
				authentication-failure-url="/LoginFail.nds" />
   		<security:logout
				logout-success-url="/BoardMain.nds"/>
		<security:intercept-url pattern="/AdminBoardMain.nds"
				access="ROLE_ADMIN"/>		
		<security:intercept-url pattern="/AdminPictureList.nds"
				access="ROLE_ADMIN"/>		
		<security:intercept-url pattern="/AdminPictureInsert.nds"
				access="ROLE_ADMIN"/>		
		<security:intercept-url pattern="/AdminPictureDelete.nds"
				access="ROLE_ADMIN"/>		
		<security:intercept-url pattern="/AdminBoardBlind.nds"
				access="ROLE_ADMIN"/>		
   	</security:http>

	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="nds"
							password="1234"
							authorities="ROLE_ADMIN" />
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>	
	
</beans>